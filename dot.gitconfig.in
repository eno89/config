# my gitconfig

[user]
	name = kana
	email = nicht@s8.xrea.com

[color]
	ui = auto
[core]
	pager = less -r
	excludesfile = ~/.gitignore
[alias]
	b = branch
	ba = branch -a
	br = branch -r
	ci = commit
	co = checkout
	d = diff HEAD
	dl = diff HEAD^
	ds = diff --cached
	du = diff
	edit-conflicted-files = !$EDITOR $(git ls-conflicted-files)
	f = fetch
	l = log
	l1 = log --pretty=oneline
	ls-conflicted-files = ls-files --unmerged
	m = merge
	m1 = merge HEAD@{1}
	s = show
	st = status
	staged = diff --cached
	t = tag
	unstaged = diff

# __END__
