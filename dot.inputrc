# My .inputrc

set bell-style none
set completion-ignore-case on
set convert-meta off
set editing-mode vi
set input-meta on
set mark-symlinked-directories on
set output-meta on
set visible-stats on

"\C- r": re-read-init-file
"\C- \C-r": re-read-init-file

"\C-  ": "\C-[Ax\C-u  fg\C-m"
"\C- \C- ": "\C-[Ax\C-u  fg\C-m"

"\C-j": "\C-[Ax\C-u  cdhist_forward\C-m"
"\C-k": "\C-[Ax\C-u  cdhist_back\C-m"

# __END__
# vim: filetype=readline
