# Ragnarok 
# ========

define enable_ragnarok
if (enable_ragnarok)

window	Ragnarok	/Ragnarok/ : Global

key C-Space = &ShellExecute( \
	        "open", \
	        "C:\\cygwin\\usr\\win\\bin\\Python-2.3.4\\pythonw", \
	        "C:\\cygwin\\home\\kana\\bin\\ro-move.py Ragnarok -3 -23", \
	        , \
	        ShowNormal \
              )

key C-LeftSquareBracket	=    Escape
key C-Q			=    F12
key Escape		=    Insert

key C-W			=    Slash W Return
key C-S-W		=    Slash W H E R E Return

key C-*S-U		=    Home S-End *S-Delete
key C-*S-K		=  S-End *S-Delete
key C-*S-F		= *S-Right
key C-*S-B		= *S-Left
key C-P			=    Up
key C-N			=    Down
key C-*S-A		= *S-Home
key C-*S-E		= *S-End
key C-*S-H		= *S-BackSpace
key C-*S-D		= *S-Delete
# key C-C		=  C-Insert
# key C-X		=  S-Delete
key C-V			=  S-Insert
key C-M			=    Return


# Shortcuts
# ---------
#
#   _[1-9] -> For F[1-9] in Page1
# C-_[1-9] -> For F[1-9] in Page2
# M-_[1-9] -> For F[1-9] in Page3

keyseq $RO_BEFORE_CTRL = F12
keyseq $RO_AFTER_CTRL = F12 F12
keyseq $RO_BEFORE_ALT = F12 F12
keyseq $RO_AFTER_ALT = F12

key _1			=    F1
key _2			=    F2
key _3			=    F3
key _4			=    F4
key _5			=    F5
key _6			=    F6
key _7			=    F7
key _8			=    F8
key _9			=    F9
# key _0		=    F10
# key Minus		=    F11
# key Equal		=    F12
key BackSlash		=    Insert

key C-_1		=    $RO_BEFORE_CTRL F1 $RO_AFTER_CTRL
key C-_2		=    $RO_BEFORE_CTRL F2 $RO_AFTER_CTRL
key C-_3		=    $RO_BEFORE_CTRL F3 $RO_AFTER_CTRL
key C-_4		=    $RO_BEFORE_CTRL F4 $RO_AFTER_CTRL
key C-_5		=    $RO_BEFORE_CTRL F5 $RO_AFTER_CTRL
key C-_6		=    $RO_BEFORE_CTRL F6 $RO_AFTER_CTRL
key C-_7		=    $RO_BEFORE_CTRL F7 $RO_AFTER_CTRL
key C-_8		=    $RO_BEFORE_CTRL F8 $RO_AFTER_CTRL
key C-_9		=    $RO_BEFORE_CTRL F9 $RO_AFTER_CTRL
# key C-_0		=    $RO_BEFORE_CTRL F10 $RO_AFTER_CTRL
# key C-Minus		=    $RO_BEFORE_CTRL F11 $RO_AFTER_CTRL
# key C-Equal		=    $RO_BEFORE_CTRL F12 $RO_AFTER_CTRL

key M-_1		=    $RO_BEFORE_ALT F1 $RO_AFTER_ALT
key M-_2		=    $RO_BEFORE_ALT F2 $RO_AFTER_ALT
key M-_3		=    $RO_BEFORE_ALT F3 $RO_AFTER_ALT
key M-_4		=    $RO_BEFORE_ALT F4 $RO_AFTER_ALT
key M-_5		=    $RO_BEFORE_ALT F5 $RO_AFTER_ALT
key M-_6		=    $RO_BEFORE_ALT F6 $RO_AFTER_ALT
key M-_7		=    $RO_BEFORE_ALT F7 $RO_AFTER_ALT
key M-_8		=    $RO_BEFORE_ALT F8 $RO_AFTER_ALT
key M-_9		=    $RO_BEFORE_ALT F9 $RO_AFTER_ALT
# key M-_0		=    $RO_BEFORE_ALT F10 $RO_AFTER_ALT
# key M-Minus		=    $RO_BEFORE_ALT F11 $RO_AFTER_ALT
# key M-Equal		=    $RO_BEFORE_ALT F12 $RO_AFTER_ALT

# Multiple shortcuts by 1 key.
# &Wait(400) must be there to be processed these shortcuts surely.
# 400 is the smallest and the best value,
# because unprocessed shortcuts rarely occur (unless lag).
key    M-S-A = &Toggle(Lock9, on)   Slash L _9 Space O N
key L9-M-S-A = &Toggle(Lock9, off)  Slash L _9 Space O F F
key L9-M-I = $RO_BEFORE_ALT F8 &Wait(400) F7 &Wait(400) F9 $RO_AFTER_ALT
key L9-M-U = $RO_BEFORE_ALT F8 &Wait(400) F7 &Wait(400) F6 $RO_AFTER_ALT
key L9-M-Y = $RO_BEFORE_ALT F8 &Wait(400) F6 &Wait(400) F5 $RO_AFTER_ALT
key L9-M-T = $RO_BEFORE_ALT F8 &Wait(400) F7 &Wait(400) F5 $RO_AFTER_ALT


# Emotions
