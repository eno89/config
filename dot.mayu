# Opera
# =====
#
# Just adding some 2-stroke keys (C-W xxx -- like vim's binding).

# define enable_opera  # Removed, Opera allows n-stroke key (from ver 7 or 8).
if (enable_opera)

keymap2 Opera-CW : Global = &Undefined
key C			=    C-K
key H			=    _2
key J			=    F9
key K			=    F8
key L			=    _1
key C-C			=    C-K
key C-H			=    _2
key C-J			=    F9
key C-K			=    F8
key C-L			=    _1

window Opera /\\Opera\.exe/ : Global
key C-W			=   &Prefix(Opera-CW)

endif




